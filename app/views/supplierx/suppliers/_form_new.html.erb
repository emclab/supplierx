<% if  @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<h1><%=I18n.t(@title)%></h1>
<%= simple_form_for @supplier do |f| %>    
 
  <%= f.input :name, :label => t('Supplier Name:') %>  
  <%= f.input :short_name, :label => t('Short Name:'), :placeholder => '4-8字' %>
  <%= f.input :contact_name, :label => t('Contact Name:') %> 
  <%= f.input :contact_info, :label => t('Contact Info:'), :input_html => {:rows => 2} %> 
  <%= f.input :supply_since, :label => t('Supply Since:'), :as => :string %>
  <%= f.input :cell, :label => t('Cell Phone:') %>   
  <%= f.input :phone, :label => t('Phone:') %> 
  <%= f.input :fax, :label => t('Fax:') %> 
  <%= f.input :address, :label => t('Address:'), :input_html => { :rows => 2} %>
  <%= f.input :web, :label => t('Web:') %>
  <%= f.input :main_product, :label => t('Main Product：'), :input_html => { :rows => 4} %>   
  <%= f.input :short_comment, :label => t('Short Comment:') %>   
  <%= f.input :quality_system_id, :collection => return_misc_definitions('quality_system'), :label => t('Quality System:'),
                                 :label_method => :name, :value_method => :id, :include_blank => true %>  
  <%= f.input :note, :label => t('Note:'), :input_html => { :rows => 4} %>        
  
  <%= link_to t('Back'), SUBURI + "/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save') , :class => BUTTONS_CLS['action'] %>  
<% end %>  

<% end %>


